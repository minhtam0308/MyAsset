<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".DetailTSActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nút quay lại -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Quay lại"
            android:tint="#FF000000"
            android:tintMode="src_in"
            android:layout_marginBottom="16dp" />
        <!-- Header với ảnh tài sản -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Ảnh tài sản -->
                <ImageView
                    android:id="@+id/iv_asset_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0"
                    android:contentDescription="Ảnh tài sản"
                    android:scaleType="centerCrop" />

                <!-- Tên tài sản -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="8"
                    >
                    <TextView
                        android:id="@+id/tv_asset_name"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:text="Tên tài sản"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:id="@+id/tv_asset_soluong"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2C2C2C"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>


                <!-- Danh mục -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/category_tag_background"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đồ điện tử"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thông tin cơ bản -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THÔNG TIN CƠ BẢN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <!-- Giá trị/Giá mua -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_money"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#FF9800" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giá trị/Giá mua"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_asset_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 VNĐ"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2C2C2C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Ngày mua/Ngày sở hữu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#2196F3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ngày mua/Ngày sở hữu"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_purchase_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="01/01/2024"
                            android:textSize="16sp"
                            android:textColor="#2C2C2C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Tình trạng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_status"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#9C27B0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tình trạng"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang sử dụng"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/status_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Vị trí lưu trữ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:layout_marginEnd="12dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#F44336" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vị trí lưu trữ"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phòng khách"
                            android:textSize="16sp"
                            android:textColor="#2C2C2C" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mô tả -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MÔ TẢ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm đẹp pin chau"
                    android:textSize="15sp"
                    android:textColor="#2C2C2C"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Thông tin bảo hành -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THÔNG TIN BẢO HÀNH"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <!-- Ngày bắt đầu bảo hành -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày bắt đầu:"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_warranty_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/2024"
                        android:textSize="14sp"
                        android:textColor="#2C2C2C"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Ngày kết thúc bảo hành -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày kết thúc:"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_warranty_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/2025"
                        android:textSize="14sp"
                        android:textColor="#2C2C2C"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Trạng thái bảo hành -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trạng thái:"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_warranty_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Còn bảo hành"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/warranty_status_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <!-- Ghi chú bảo hành -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ghi chú bảo hành:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_warranty_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bảo hành tại cửa hàng mua"
                    android:textSize="14sp"
                    android:textColor="#2C2C2C"
                    android:padding="8dp"
                    android:minHeight="40dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ghi chú -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GHI CHÚ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Không có ghi chú"
                    android:textSize="15sp"
                    android:textColor="#2C2C2C"
                    android:padding="12dp"
                    android:minHeight="60dp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_edit_asset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="CHỈNH SỬA"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary"
                android:padding="12dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete_asset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="XÓA"
                android:textColor="@android:color/white"
                android:background="@drawable/button_danger"
                android:padding="12dp"
                android:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>