<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateDanhMuc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/createdm_exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/exit"
                    tools:layout_editor_absoluteX="196dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="Thêm danh mục"
                android:textSize="20sp" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginHorizontal="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên danh mục"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:text="*"
                    android:textColor="#FF0303"
                    android:textSize="24sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/danhmuc_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/create_input"
                android:ems="10"
                android:hint="Nhập tên danh mục"
                android:inputType="text" />
        </LinearLayout>
        <TextView
            android:id="@+id/danhmuc_btnthem"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="200sp"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="200sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/button_sua_cus"
            android:gravity="center"
            android:text="Thêm"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>