<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_signup" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký"
                    android:textAlignment="center"
                    android:textColor="#6c5dd2"
                    android:textSize="35sp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên của bạn"
                        android:textColor="#6c5dd2"
                        android:textSize="18sp"

                        />

                    <EditText
                        android:id="@+id/edten"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/edit_edt"
                        android:ems="10"
                        android:hint="Nhập tên của bạn"
                        android:inputType="text"
                        android:paddingStart="10sp"
                        android:textColor="#707070" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản"
                        android:textColor="#6c5dd2"
                        android:textSize="18sp"

                        />

                    <EditText
                        android:id="@+id/editTextText"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/edit_edt"
                        android:ems="10"
                        android:hint="Nhập tài khoản"
                        android:inputType="text"
                        android:paddingStart="10sp"
                        android:textColor="#707070" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvmatkhau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu"
                        android:textColor="#6c5dd2"
                        android:textSize="18sp"

                        />

                    <EditText
                        android:id="@+id/edmatkhau"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/edit_edt"
                        android:ems="10"
                        android:hint="Nhập mật khẩu"
                        android:inputType="textPassword"
                        android:paddingStart="10sp"
                        android:textColor="#707070" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvmatkhau2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="xác nhận mật khẩu"
                        android:textColor="#6c5dd2"
                        android:textSize="18sp"

                        />

                    <EditText
                        android:id="@+id/edmatkhau2"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/edit_edt"
                        android:ems="10"
                        android:hint="Nhập lại mật khẩu"
                        android:inputType="textPassword"
                        android:paddingStart="10sp"
                        android:textColor="#707070" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dn"
                    style="@android:style/Widget.Button"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/btn_login__back"
                    android:gravity="center"
                    android:padding="15sp"
                    android:text="Đăng ký"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn đã có tài khoản? Hãy "
                        android:textAlignment="center"
                        android:textColor="#000000"

                        />

                    <TextView
                        android:id="@+id/btn_dangnhap_navigate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đăng nhập"
                        android:textAlignment="center"
                        android:textColor="#3F51B5" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>