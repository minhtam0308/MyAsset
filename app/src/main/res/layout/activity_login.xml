<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/top_login" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập"
                    android:textColor="#6c5dd2"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="35sp"

                    />

                <LinearLayout
                    android:layout_marginTop="16sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản"
                        android:textSize="18sp"
                        android:textColor="#6c5dd2"

                        />

                    <EditText
                        android:id="@+id/editTextText"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:ems="10"
                        android:inputType="text"
                        android:hint="Nhập tài khoản"
                        android:textColor="#707070"
                        android:layout_marginTop="8sp"
                        android:paddingStart="10sp"
                        android:background="@drawable/edit_edt"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu"
                        android:textSize="18sp"
                        android:textColor="#6c5dd2"

                        />

                    <EditText
                        android:id="@+id/edten"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:hint="Nhập mật khẩu"
                        android:textColor="#707070"
                        android:layout_marginTop="8sp"
                        android:paddingStart="10sp"
                        android:background="@drawable/edit_edt"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20sp"
                    >
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn chưa có tài khoản? Hãy "
                        android:textAlignment="center"
                        android:textColor="#000000"

                        />
                    <TextView
                        android:id="@+id/btn_dangky_navigate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đăng ký"
                        android:textAlignment="center"
                        android:textColor="#3F51B5"
                        />
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dn"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_login__back"
                    android:text="Đăng nhập"
                    android:layout_gravity="center"
                    android:layout_marginTop="20sp"
                    android:textSize="20dp"
                    android:padding="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    style="@android:style/Widget.Button"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>